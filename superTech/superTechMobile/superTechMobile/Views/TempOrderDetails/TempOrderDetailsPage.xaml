                        <Label Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding AmountWithTaxStr}" FontSize="18" FontAttributes="Bold" Margin="140,0,0,0" HorizontalOptions="Start" VerticalOptions="Center"></Label>
